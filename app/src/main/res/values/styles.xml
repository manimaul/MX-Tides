<!-- res/values/styles.xml -->
<resources>
    <!-- your theme inherits from the material theme -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailEven">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DetailOdd">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/secondary_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Header">
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:minHeight">24dp</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/divider</item>
        <item name="android:minHeight">1dp</item>
    </style>

    <style name="DrawerMenuActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:color">@color/accent</item>
    </style>
</resources>