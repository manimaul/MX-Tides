<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            style="@style/DrawerMenuActionButton"
            android:id="@+id/drawer_layout_settings_done_btn"
            android:layout_width="wrap_content"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_dark"
            android:text="@string/done"/>

        <View
            style="@style/Divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            style="@style/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/units_of_measure"/>

        <Spinner
            android:id="@+id/drawer_layout_settings_units_spn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:spinnerMode="dropdown"
            android:entries="@array/unit_options"/>

        <View
            style="@style/Divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            style="@style/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/number_of_station_cards"/>

        <Spinner
            android:id="@+id/drawer_layout_settings_card_num_spn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:spinnerMode="dropdown"
            android:entries="@array/station_count_options"/>

        <View
            style="@style/Divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</ScrollView>